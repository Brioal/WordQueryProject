<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.brioal.wordqueryproject.MainActivity">

    <EditText
        android:id="@+id/main_et_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入要查询的单词"
        android:text="this is my world"/>

    <Button
        android:id="@+id/btn_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="查询单词"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_et_key"/>

    <TextView
        android:id="@+id/main_tv_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单词"/>

    <TextView
        android:id="@+id/main_tv_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="翻译"/>


</LinearLayout>
